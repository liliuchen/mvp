        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.llc.framework.ui.activity.main.LoginActivity"></activity>
        <activity
            android:name="com.llc.framework.ui.activity.main.MainActivity"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity
